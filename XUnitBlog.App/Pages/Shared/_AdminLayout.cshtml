@using System.Security.Claims
@using XUnitBlog.Domain.Entities
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Blog</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/XUnitBlog.App.styles.css" asp-append-version="true" />

    <!-- UIkit CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/uikit@3.24.2/dist/css/uikit.min.css" />

    <!-- AlpineJS -->
    <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>
</head>
<body>
    <div class="uk-container-expand" uk-grid>
        <div class="uk-width-1-5">
            <ul class="uk-nav-default uk-padding" uk-nav="multiple: true" style="font-size: 18px">
                <li class="uk-active">
                    <a href="/">
                        <span uk-icon="reply"></span>
                        Voltar para Blog
                    </a>
                </li>
                <li class="uk-parent">
                    <a asp-page="/Admin/Users">
                        <span uk-icon="users"></span>
                        Usuários
                        <span uk-nav-parent-icon></span>
                    </a>
                    <ul class="uk-nav-sub">
                        <li><a asp-page="/Admin/Users/Index">Todos</a></li>
                        <li><a asp-page="/Admin/Users/New">Novo</a></li>
                    </ul>
                </li>
                <li class="uk-parent">
                    <a asp-page="/Admin/Posts">
                        <span uk-icon="copy"></span>
                        Posts
                        <span uk-nav-parent-icon></span>
                    </a>
                    <ul class="uk-nav-sub">
                        <li><a asp-page="/Admin/Posts/Index">Todos</a></li>
                        <li><a asp-page="/Admin/Posts/New">Novo</a></li>
                    </ul>
                </li>
            </ul>
        </div>
        <div class="uk-width-expand uk-padding-large" style="height: 100dvh">
            <div>
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- UIkit JS -->
    <script src="https://cdn.jsdelivr.net/npm/uikit@3.24.2/dist/js/uikit.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/uikit@3.24.2/dist/js/uikit-icons.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
